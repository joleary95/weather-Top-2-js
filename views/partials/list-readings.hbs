<table class="table is-bordered is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th class="has-background-primary has-text-white has-text-centered">Code</th>
      <th class="has-background-primary has-text-white has-text-centered">Temp</th>
      <th class="has-background-primary has-text-white has-text-centered">Wind Speed</th>
      <th class="has-background-primary has-text-white has-text-centered">Pressure</th>
      <th class="has-background-primary has-text-white has-text-centered">Time Stamp</th>
      <th class="has-background-primary has-text-white has-text-centered"></th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td class="has-text-centered">{{code}}</td>
        <td class="has-text-centered">{{temp}}</td>
        <td class="has-text-centered">{{windspeed}}</td>
        <td class="has-text-centered">{{pressure}}</td>
        <td class="has-text-centered">{{timestamp}}</td>
        <td>
         <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button">
          {{>icons/delete}}
        </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>