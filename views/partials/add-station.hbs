<form action="/dashboard/addstation" method="POST">
  <div class="field">
    <label class="label">Station name</label>
    <input class="input" type="text" placeholder="Enter Station name" name="title" />
  </div>
  <div class="field">
    <label class="label">Latitude</label>
    <input class="input" type="text" placeholder="Enter Latitude" name="latitude" />
  </div>
  <div class="field">
    <label class="label">Longitude</label>
    <input class="input" type="text" placeholder="Enter Longitude" name="longitude" />
  </div>
  <button class="button is-link">Add Station</button>
</form>