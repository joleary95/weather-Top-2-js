<div class="columns">
  <div class="column">
    <div class="card has-background-black has-text-white">
      <div class="card-header">
        <h1 class="card-header-title is-centered title is-4 has-text-white">
          {{station.title}}
        </h1>
      </div>
      <div class="card-content" style="height: 200px;">
        <div class="coordinates">
          <p>
            <strong class="has-text-white">Lat</strong>
            {{station.latitude}}
            <br />
            <strong class="has-text-white">Long</strong>
            {{station.longitude}}
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card has-background-black has-text-white">
      <div class="card-header">
        <h1 class="card-header-title is-centered title is-4 has-text-white">
          Weather
        </h1>
      </div>
      <div class="card-content" style="height: 200px;">
        {{latestWeather.weatherDescription}}
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card has-background-black has-text-white">
      <div class="card-header">
        <h1 class="card-header-title is-centered title is-4 has-text-white">
          Temp
        </h1>
      </div>
      <div class="card-content" style="height: 200px;">
        {{latestWeather.tempC}}&#8451;
        <br />
        {{latestWeather.tempF}}&#8457;
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card has-background-black has-text-white">
      <div class="card-header">
        <h1 class="card-header-title is-centered title is-4 has-text-white">
          Wind
        </h1>
      </div>
      <div class="card-content" style="height: 200px;">
        {{latestWeather.windSpeedBft}}
        Bft
        <br />
        {{latestWeather.windDirection}}
        <br />
        <p>feels like
          <br />
          {{latestWeather.windChill}}</p>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="card has-background-black has-text-white">
      <div class="card-header">
        <h1 class="card-header-title title is-4 is-centered has-text-white">
          Pressure
        </h1>
      </div>
      <div class="card-content" style="height: 200px;">
        {{latestWeather.pressure}}
        &#13169;
      </div>
    </div>
  </div>
</div>